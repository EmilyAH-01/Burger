<div class="row jumbotron text-center">
  <div class="col-md-12">
    <span><i class="fas fa-hamburger fa-7x"></i></span>
    <h1>Eat the Burger!</h1>
  </div>
</div>

<div class="row burgers">
  <div class="col-md-6 column">
    <h2 class="text-center">Burgers available:</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> block/burger-block eaten=true}}
          {{/unless}}
        {{/each}}
      </ul>
  </div>
  <div class="col-md-6">
    <h2 class="text-center">Burgers eaten:</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> block/burger-block eaten=false}}
          {{/if}}
        {{/each}}
      </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12 text-center">
    <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="name">
        </div>

        <button type="submit" class="btn btn-light">Add Burger</button>
      </form>
  </div>
</div>


